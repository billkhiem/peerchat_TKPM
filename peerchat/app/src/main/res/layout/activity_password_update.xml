<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.PasswordUpdate">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Set new pin"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:inputType="numberPassword"
        android:hint="Enter old 5-digit pin"
        android:id="@+id/old_pin"
        android:layout_centerInParent="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/old_pin"
        android:textSize="18sp"
        android:id="@+id/new_pin"
        android:inputType="numberPassword"
        android:hint="Enter new 5-digit pin"
        android:layout_centerInParent="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/new_pin"
        android:id="@+id/confirm_pin"
        android:inputType="numberPassword"
        android:hint="Reenter new 5-digit pin"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_btn"
        android:text="Submit"
        android:layout_below="@id/confirm_pin"
        android:layout_alignParentEnd="true" />

</RelativeLayout>